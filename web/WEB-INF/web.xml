        <servlet-name>VerifyController</servlet-name>
        <servlet-class>huyttd.controllers.VerifyController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>huyttd.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionMainController</servlet-name>
        <servlet-class>huyttd.question_controllers.QuestionMainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchQuestionController</servlet-name>
        <servlet-class>huyttd.question_controllers.SearchQuestionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateQuestionController</servlet-name>
        <servlet-class>huyttd.question_controllers.UpdateQuestionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditQuestionController</servlet-name>
        <servlet-class>huyttd.question_controllers.EditQuestionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteQuestionController</servlet-name>
        <servlet-class>huyttd.question_controllers.DeleteQuestionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateQuestionController</servlet-name>
        <servlet-class>huyttd.question_controllers.CreateQuestionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuizMainController</servlet-name>
        <servlet-class>huyttd.quiz_controllers.QuizMainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TakeQuizController</servlet-name>
        <servlet-class>huyttd.quiz_controllers.TakeQuizController</servlet-class>
